
<%= link_to 'new', new_menu_path %>
<% @menus.each do |menu| %>
    
     <table>
        <tr>
            <td>  
                <%= link_to menu.name, menu_path(menu) %>
            </td>
            <td>
               <%= menu.total_distance %>
            </td>
        </tr>
    </table>

    
<% end %>
<%= line_chart @menu_date.pluck(:created_at,:total_distance), max: 12000,title: "total distance" %>
 <!--x軸y軸の設定はpluck(:x軸,：y軸)でいけるy-->